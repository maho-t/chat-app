<div class="main-header">
  <div class="left-header">
    <div class="header-title">
      息抜き
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href='#'>チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="chat">
    <div class="upper-chat">
      <div class="chat-user">
        Jin
      </div>
      <div class="chat-time">
        2022/3/29(Tue) 15:55:55
      </div>
    </div>
    <div class="lower-chat">
      <div class="chat-message">
        Good afternoon!
      </div>
    </div>
  </div>

  <div class="chat">
    <div class="upper-chat">  
      <div class="chat-user">
        Ben
      </div>
      <div class="chat-time">
        2022/3/29(Tue) 20:33:33
      </div>
    </div>
    <div class="lower-chat">
      <div class="chat-message">
        Good evening!
      </div>
    </div>
  </div>
</div>


<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="message-form">
    <%= f.text_field :content, class: 'text-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
